{
  "name": "book-store-api",
  "version": "1.0.0",
  "description": "Proyecto inicial para aprender las bases de GraphQL",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc -p . && ncp src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exe \"ts-node\" \"src/app.ts\" -e ts,graphql,json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "graphql",
    "graphql-basic",
    "unions",
    "query",
    "mutation",
    "book-store",
    "apollo-server-express-3"
  ],
  "author": "Jhon Calderon",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-import-node": "0.0.4",
    "graphql-tools": "^8.2.0",
    "ncp": "^2.0.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/node": "^16.10.5",
    "nodemon": "^2.0.13",
    "ts-node": "^10.3.0"
  }
}
